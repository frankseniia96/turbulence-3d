{
  "version": 8,
  "name": "3D Turbulence Viewer",
  "center": [60, 50],
  "zoom": 0,
  "glyphs": "https://orangemug.github.io/font-glyphs/glyphs/{fontstack}/{range}.pbf",
  "sprite": "https://tiles.weather.gis-master.ru/sprite/weather",
  "sources": {
    "turb": {
      "type": "vector",
      "url": "https://tiles.weather.gis-master.ru/sources/turbulence"
    },
    "openmaptiles": {
      "type": "vector",
      "url": "https://api.maptiler.com/tiles/v3-openmaptiles/tiles.json?key=get_your_own_OpIi9ZULNHzrESv6T2vL"
    }
  },
  "layers": [
    {
      "id": "bg",
      "type": "background",
      "paint": {
        "background-color": "#f0f0f0"
      }
    },
    {
      "id": "water",
      "type": "fill",
      "source": "openmaptiles",
      "source-layer": "water",
      "paint": {
        "fill-color": "#aadaff"
      }
    },
    {
      "id": "boundaries",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "boundary",
      "paint": {
        "line-color": "#999999",
        "line-width": 1
      }
    },
    {
      "id": "turb3d",
      "type": "fill-extrusion",
      "source": "turb",
      "source-layer": "turbulence",
      "paint": {
        "fill-extrusion-opacity": 0.9,
        "fill-extrusion-height": ["get", "height_max"],
        "fill-extrusion-base": ["get", "height_min"],
        "fill-extrusion-color": [
          "interpolate",
          ["linear"],
          ["get", "height_max"],
          6000, "#ffffcc",
          9000, "#fd8d3c",
          12000, "#e31a1c"
        ],
        "fill-extrusion-vertical-gradient": true
      }
    }
  ]
}
