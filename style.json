{
  "version": 8,
  "name": "3D Turbulence + OSM Background",
  "center": [60, 50],
  "zoom": 4,
  "glyphs": "https://orangemug.github.io/font-glyphs/glyphs/{fontstack}/{range}.pbf",
  "sprite": "https://tiles.weather.gis-master.ru/sprite/weather",
  "sources": {
    "osm": {
      "type": "raster",
      "tiles": ["https://a.tile.openstreetmap.org/{z}/{x}/{y}.png"],
      "tileSize": 256
    },
    "turb": {
      "type": "vector",
      "url": "https://tiles.weather.gis-master.ru/sources/turbulence"
    }
  },
  "layers": [
    {
      "id": "osm-bg",
      "type": "raster",
      "source": "osm",
      "minzoom": 0,
      "maxzoom": 19
    },
    {
      "id": "turb3d",
      "type": "fill-extrusion",
      "source": "turb",
      "source-layer": "turbulence",
      "paint": {
        "fill-extrusion-opacity": 0.6,
        "fill-extrusion-height": ["get", "height_max"],
        "fill-extrusion-base": ["get", "height_min"],
        "fill-extrusion-color": [
          "interpolate",
          ["linear"],
          ["get", "height_max"],
          6000, "#ffffcc",
          9000, "#fd8d3c",
          12000, "#e31a1c"
        ],
        "fill-extrusion-vertical-gradient": true
      }
    },
    {
      "id": "turbulence-labels",
      "type": "symbol",
      "source": "turb",
      "source-layer": "turbulence",
      "layout": {
        "text-field": [
          "concat",
          ["get", "degree_of_turbulence_shot"],
          "\n",
          ["get", "height_min_fl"],
          "/",
          ["get", "height_max_fl"]
        ],
        "text-font": ["Roboto Black"],
        "text-size": 12,
        "text-anchor": "center",
        "visibility": "visible"
      },
      "paint": {
        "text-color": "#ffffff",
        "text-halo-color": "#333333",
        "text-halo-width": 1.5
      }
    }
  ]
}
